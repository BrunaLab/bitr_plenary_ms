@article{zettlemoyerWhatAreWe2023,
  title = {What Are We Reading? {{Hot Topics}} and {{Authorship}} in {{Ecology Literature Across Decades}}},
  shorttitle = {What Are We Reading?},
  author = {Zettlemoyer, Meredith A. and {Cortijo-Robles}, Karina M. and Srodes, Nicholas and Johnson, Sarah E.},
